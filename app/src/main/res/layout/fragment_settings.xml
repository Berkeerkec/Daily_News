<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feedPage.SettingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Account"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/right_image"
        android:drawableStart="@drawable/account_image"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CAC8C8"
        android:layout_marginStart="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Push Notifications"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/false_image"
        android:drawableStart="@drawable/notification_image"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CAC8C8"
        android:layout_marginStart="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Term &amp; Conditions"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/right_image"
        android:drawableStart="@drawable/about_image"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CAC8C8"
        android:layout_marginStart="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="About"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/right_image"
        android:drawableStart="@drawable/about_image"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CAC8C8"
        android:layout_marginStart="40dp"/>

    <TextView
        android:id="@+id/settigsLogoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/logout_image"
        android:drawablePadding="10dp"
        android:padding="15dp"
        android:text="Log Out"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CAC8C8"
        android:layout_marginStart="40dp"/>

</LinearLayout>